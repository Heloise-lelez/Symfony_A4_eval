{% extends 'base.html.twig' %}


{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%;  }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{'welcome_vivamatcha'|trans}}</h1>

   
        {% if app.user %}
            <div class="mb-3">
                {{'logged_as'|trans}} {{ app.user.name }} {{ app.user.surname }}. {{ 'you_have'|trans }}
                <span class="badge bg-primary">{{ app.user.points }}</span> {{ 'points'|trans }}.
            </div>
        {% endif %}

         <h2>{{'list_of_items'|trans}}</h2>

    <ul class="product-container">
        {% for product in products %}
            <li class="product-item">
                <a class="product-item__container" href="{{ path('app_detail_product', { id: product.id }) }}">
                <h3 class="product-item__title title" >{{ product.name }} </h3>
                <img class="product-item__img" src="{{ asset('matcha.jpg') }}" alt="Matcha latte" >
                <span>{{ product.description }}</span>
                <span>{{'price'|trans}} : {{ product.price }} {{'points'}}</span>
                </a>
            </li>
        {% else %}
            <li>{{'no_items_found'|trans}}.</li>
        {% endfor %}
    </ul>


</div>
{% endblock %}
