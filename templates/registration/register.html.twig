{% extends 'base.html.twig' %}

{% block title %}{{'register'|trans}}{% endblock %}

{% block body %}
    <h1>{{'register'|trans}}</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email, { label: 'email'|trans }) }}
        {{ form_row(registrationForm.name, { label: 'name'|trans }) }}
        {{ form_row(registrationForm.surname, { label: 'surname'|trans }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'password'|trans
        }) }}
        {{ form_row(registrationForm.agreeTerms, { label: 'terms_and_conditions'|trans }) }}

        <button type="submit" class="btn">{{ 'register'|trans }}</button>
    {{ form_end(registrationForm) }}
{% endblock %}
